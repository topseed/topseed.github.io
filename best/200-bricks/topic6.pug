script.
    function topic6Loaded(){
        var bx1 = $('#topic6p #bx1v')
        bx1.css('opacity', 1);
        bx1.css('filter', 'grayscale(0%)');
        var bx2 = $('#topic6p #bx2v')
        bx2.css('opacity', 1);
        bx2.css('filter', 'grayscale(0%)');

        var a1 = $('#topic6p #a5');
        var a2 = $('#topic6p #a6');

        if (animate) {
            var tl = new TimelineMax();
            tl.to(a2, 2, {css: {className:'+=t--selected'}}, 2); 
            tl.to(a1, 2, {css: {className:'-=t--selected'}}, 2); 
            tl.play();
        }
    }
    function topic6Setup(){
        if (animate)
        {
            $('#topic6p .box').css('opacity',0);
            $('#topic6p .box').css('filter', 'grayscale(100%)');
            $('#topic6p .box').css('-webkit-filter', 'grayscale(100%)');
            $('#topic6p .box').removeClass("mui--z4");
        }    
    } 
