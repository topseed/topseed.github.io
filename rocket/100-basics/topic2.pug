script.
    function topic2Loaded(){

        var bx1 = $('#topic2p #bx1v')
        bx1.css('opacity', 1);
        bx1.css('filter', 'grayscale(0%)');

        var a1 = $('#topic2p #a1');
        var a2 = $('#topic2p #a2');

        if (animate)
        {
            var tl = new TimelineMax();
            tl.to(a2, 2, {css: {className:'+=t--selected'}}, 2); 
            tl.to(a1, 2, {css: {className:'-=t--selected'}}, 2); 
            tl.play();
        }
        else
        {
           a2.addClass("t--selected"); 
        }
    }
    function topic2Setup(){
        if (animate)
        {
            $('#topic2p .box').css('opacity',0);
            $('#topic2p .box').css('filter', 'grayscale(100%)');
            $('#topic2p .box').css('-webkit-filter', 'grayscale(100%)');
            $('#topic2p .box').removeClass("mui--z4");
        }    
    } 
