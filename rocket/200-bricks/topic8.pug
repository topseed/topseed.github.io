script.
    function topic8Loaded(){
        var bx1 = $('#topic8p #bx1v')
        bx1.css('opacity', 1);
        bx1.css('filter', 'grayscale(0%)');
        var bx2 = $('#topic8p #bx2v')
        bx2.css('opacity', 1);
        bx2.css('filter', 'grayscale(0%)');

        var a1 = $('#topic8p #a7');
        var a2 = $('#topic8p #a8');

        if (animate) {
            var tl = new TimelineMax();
            tl.to(a2, 2, {css: {className:'+=t--selected'}}, 2); 
            tl.to(a1, 2, {css: {className:'-=t--selected'}}, 2); 
            tl.play();
        }
    }
    function topic8Setup(){
        if (animate)
        {
            $('#topic8p .box').css('opacity',0);
            $('#topic8p .box').css('filter', 'grayscale(100%)');
            $('#topic8p .box').css('-webkit-filter', 'grayscale(100%)');
            $('#topic8p .box').removeClass("mui--z4");
        }    
    } 
