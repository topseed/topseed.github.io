script.
    var animatetopic1 = true;
    function topic10Loaded(){
        var bx1 = $('#topic10p #bx1v')
        bx1.css('opacity', 1);
        bx1.css('filter', 'grayscale(0%)');
        var bx2 = $('#topic10p #bx2v')
        bx2.css('opacity', 1);
        bx2.css('filter', 'grayscale(0%)');
        var bx3 = $('#topic10p #bx3v')
        bx3.css('opacity', 1);
        bx3.css('filter', 'grayscale(0%)');

        var a1 = $('#topic10p #a9');
        var a2 = $('#topic10p #a10');

        if (animate) {
            var tl = new TimelineMax();
            tl.to(a2, 2, {css: {className:'+=t--selected'}}, 2); 
            tl.to(a1, 2, {css: {className:'-=t--selected'}}, 2); 
            tl.play();
        }
        else
        {
           a1.removeClass("t--selected"); 
           a2.addClass("t--selected"); 
        }
    }
    function page5Setup(animate){
        animatetopic1 = animate;
        if (animatetopic1)
        {
            $('#topic10p .box').css('opacity',0);
            $('#topic10p .box').css('filter', 'grayscale(100%)');
            $('#topic10p .box').css('-webkit-filter', 'grayscale(100%)');
            $('#topic10p .box').removeClass("mui--z4");
        }    
    } 
