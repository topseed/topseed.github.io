script.
    var animatePage5 = true;
    function steps3Loaded(){
        var bx1 = $('#steps3p #bx1'); bx2 = $('#steps3p #bx2'); bx3 = $('#steps3p #bx3'); 
        bx1.css('opacity',1);
        bx1.css('filter', 'grayscale(0%)');
        bx2.css('opacity',1);
        bx2.css('filter', 'grayscale(0%)');

        if (animate)
        {
            var tl = new TimelineMax();
            tl.to(bx3, 3, {'filter': 'grayscale(0%)','-webkit-filter': 'grayscale(0%)',ease:Power1.easeIn}, 1);
            tl.to(bx3, 3, {opacity:100, ease:Power2.easeIn}, 1);
            tl.from(bx3, 3, {scale:.93, ease:Power1.easeIn}, 1);
            tl.call(function() {bx3.addClass("mui--z4");}, null, null, 1);
            tl.play();
        }
        else
        {
            bx3.addClass("mui--z4")
        }
    }
    function steps3Setup(){
        if (animate)
        {
            $('#steps3p .box').css('opacity',0);
            $('#steps3p .box').css('filter', 'grayscale(100%)');
            $('#steps3p .box').css('-webkit-filter', 'grayscale(100%)');
            $('#steps3p .box').removeClass("mui--z4");
        }    
    } 
